extends layout 

block content 
    h1= title
    - let items = results;
    div(class="container-fluid")
      div(class="row m-1")
       each item in items
        - let destination = `dispatch(\"/product/update?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.product_name}(#{item.product_use}) is #{item.product_cost}
         button.btn( class="btn-primary ml-1", onclick= destination) Update
    script.
     function dispatch(path){
      window.location.href=path
     }