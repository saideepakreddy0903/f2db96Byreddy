extends layout 

block content 
    h1= title
    div.container-fluid
        div.row
            each item, index in results
                div.col-sm-2(onclick=`buy(${index})`) product_name:#{item["product_name"]} <br> product_use: #{item["product_use"]} <br> product_cost: #{item["product_cost"]} <br>
        

    script.
        function buy(index) {
            alert("You purchased item " + index);
        }
  
