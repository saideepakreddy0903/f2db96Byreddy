extends layout

block content
  h1= title
  div.container-fluid 
    div.row 
        each item,index in results
            div.col-sm-2(onclick=`buy(${index})`) product name: #{item["product1"]} <br> product cost: #{item["product2"]} <br> product type: #{item["product3"]} <br>

  script.
    function buy(index) {
      alert("You purchased item " + index)
    }